<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffff00"
              android:orientation="vertical" >

    <ImageView
        android:id="@+id/welcome_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/leader_image3"/>
    <ImageView
        android:id="@+id/open_image"
        android:layout_width="200dip"
        android:layout_height="60dip"
        android:src="@drawable/rk_lijitiyan"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dip"/>
    <LinearLayout
        android:id="@+id/LL3"
        android:layout_width="90dip"
        android:layout_height="10dip"
        android:layout_marginBottom="50dip"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="#000000"
            android:id="@+id/imageView1_3"
            android:layout_toLeftOf="@+id/imageView2_3"
            android:layout_marginRight="30.0dip"/>

        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="#000000"
            android:id="@+id/imageView2_3"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="#ffffff"
            android:id="@+id/imageView3_3"
            android:layout_marginLeft="30.0dip"
            android:layout_toRightOf="@+id/imageView2_3"/>

    </LinearLayout>

</RelativeLayout>